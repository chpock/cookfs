tcltest::test cookfsFsindex-4.1 "Create filename outside iso8859-1 encoding" -setup {
} -body {
    set fn "File\u0105\u4e2d"
    set fsidx [cookfs::fsindex]
    $fsidx set $fn 1
    lindex [$fsidx get $fn] 0
} -cleanup {
    $fsidx delete
} -returnCodes {ok} -result 1

